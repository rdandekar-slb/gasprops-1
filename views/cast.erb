<div class="container"  >
    <div class="row">
        <h2>Inputs</h2>
        <table class="table table-bordered table-inverse" >
            <col style="width: 50%;">
            <col style="width: 50%;">
            <thead class="thead-inverse">
            
            </thead>
                <tbody>
                    <tr>
                        <td scope="row">Name of the Gas</td>
                        <td><%= @mygas.name %></td>
                    </tr>
                    <tr>
                        <td scope="row">Specific Gravity</td>
                        <td><%= @mygas.spgr %></td>
                    </tr>
                    <tr>
                        <td scope="row">CO<sub>2</sub></td>
                        <td><%= @mygas.co2 %></td>
                    </tr>
                    <tr>
                        <td scope="row">N<sub>2</sub></td>
                        <td><%= @mygas.n2 %></td>
                    </tr>
                    <tr>
                        <td scope="row">H<sub>2</sub>S</td>
                        <td><%= @mygas.h2s %></td>
                    </tr>
                    
                </tbody>
        </table>
    </div>


    <div class="row">
        <h3>Gas Properties </h3>
        <table class="table table-striped table-bordered table-inverse table-responsive">
            <col style="width: 16%;">
            <col style="width: 16%;">
            <col style="width: 16%;">
            <col style="width: 16%;">            
            <thead class="thead-inverse">
                <tr>
                    <th class="align-top text-center"><b>Pressure</b></th>
                    <th class="align-top text-center"><b>Temperature</b></th>
                    <th class="align-top text-center"><b>z Factor</b></th>
                    <th class="align-top text-center"><b>Formation Volume Factor B<sub>g</sub></b></th>
                    <th class="align-top text-center"><b>Viscosity &mu;<sub>g</sub></th>
                    <th class="align-top text-center"><b>Density &rho;<sub>g</sub></th>

                </tr>
                </thead>
                <tbody>
                    <tr>
                        <td scope="row"><%= @press %></td>
                        <td><%= @temp %></td>
                        <td><%= @mygas.zfactor_g %></td>
                        <td><%= @mygas.b_g %></td>
                        <td><%= @mygas.mu_g %></td>
                        <td><%= @mygas.rho_g %></td>
                    </tr>
                    <tr>
                        <td scope="row"></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tbody>
        </table>
    </div>




